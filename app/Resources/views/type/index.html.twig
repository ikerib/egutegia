{% extends 'base.html.twig' %}

{% block headline %}{{ 'Motak' | trans }} {% endblock  %}

{% block content_content %}
    <div id="toolbar">
        <button id="btnBerria" class="btn btn-default">Mota berria</button>
    </div>
    <table data-toggle="table"
           data-classes="table table-hover table-condensed"
           data-striped="true"

           data-pagination="true"
           data-search="true"
           data-height="300"

           data-sort-name="name"
           data-sort-order="asc"

           data-icon-size="sm"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"

           data-toolbar="#toolbar"
           data-show-export="true"
           data-export-types="['csv','excel', 'pdf']"
           data-export-options='{
             "fileName": "export",
             "worksheetName": "export",
             "jspdf": {
               "autotable": {
                 "styles": { "rowHeight": 20, "fontSize": 10 },
                 "headerStyles": { "fillColor": 255, "textColor": 0 },
                 "alternateRowStyles": { "fillColor": [60, 69, 79], "textColor": 255 }
               }
             }
           }'>

        <thead>
            <tr>
                <th data-halign="center" data-align="left" data-field="name" data-sortable="true">{{ 'Izena' | trans }}</th>
                <th data-halign="center" data-align="right" data-field="hours"  data-sortable="true">{{ 'Orduak' | trans }}</th>
                <th data-halign="center" data-align="center"></th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.name }}</td>
                <td>{{ type.hours }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btnEditRow" data-id="{{ type.id }}" href="javascript:void(0);">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                            <a class="btnRemoveRow" data-id="{{ type.id }}" href="javascript:void(0);">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="modal modal-fade" id="new-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
                                class="sr-only">Close</span></button>
                    <h4 class="modal-title">
                        Event
                    </h4>
                </div>
                <div class="modal-body">
                    {{ render(controller('AppBundle:Type:new' )) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Ezeztatu' | trans }}</button>
                    <button type="button" class="btn btn-primary" id="btnGordeModal">
                        {{ 'Gorde' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal modal-fade" id="new-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span
                                class="sr-only">Close</span></button>
                    <h4 class="modal-title">
                        Event
                    </h4>
                </div>
                <div id="divEditModalBody" class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Ezeztatu' | trans }}</button>
                    <button type="button" class="btn btn-primary" id="btnGordeEditModal">
                        {{ 'Gorde' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block foot_script %}
    {{ parent() }}

    <script >
        $( document ).ready(function() {

            $('#btnBerria').on('click', function () {
                $('#new-modal').modal();
            });

            $('#new-modal').on('shown.bs.modal', function () {
                $('#appbundle_type_name').focus()
            });

            $('.btnEditRow').on('click', function () {
                var miid = $(this).data('id');
                var url = Routing.generate('admin_type_edit', { id: miid });
                $('#divEditModalBody').load(url);
            });

            $('#btnGordeEditModal').on('click', function () {
                $('#form_type_edit').submit();
            });

        });
    </script>

{% endblock %}
